<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompleteAccount.Step_2"
    android:background="@color/colorWhite">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.85" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:paddingTop="10sp"
                android:text="Etapa 2 de 6"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:paddingTop="5dp"
                android:text="Informações pessoais"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageSelectedProfile"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_person"
                    android:background="@drawable/edit_text_gray"
                    android:padding="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nome_exibir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seu nome"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/email_exibir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seu email"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="10sp"
                android:paddingTop="10sp"
                android:paddingBottom="5sp"
                android:text="Sexo"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner_sexo_cadastro"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:background="@drawable/edit_text_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="10sp"
                android:paddingTop="10sp"
                android:paddingBottom="5sp"
                android:text="Estado Civil"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner_estado_civil_cadastro"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:background="@drawable/edit_text_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="10sp"
                android:paddingTop="10sp"
                android:paddingBottom="5sp"
                android:text="Rua"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edt_rua_cadastro"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:background="@drawable/edit_text_gray"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingEnd="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginEnd="10sp"
                        android:paddingTop="10sp"
                        android:paddingBottom="5sp"
                        android:text="Número"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edt_numero_cadastro"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:background="@drawable/edit_text_gray"
                        android:maxLines="1"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginEnd="10sp"
                        android:paddingTop="10sp"
                        android:paddingBottom="5sp"
                        android:text="Complemento"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edt_complemento_cadastro"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginEnd="10sp"
                        android:background="@drawable/edit_text_gray"
                        android:maxLines="1"
                        android:inputType="number"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginEnd="10sp"
                        android:paddingTop="10sp"
                        android:paddingBottom="5sp"
                        android:text="Bairro"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edt_bairro_cadastro"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:background="@drawable/edit_text_gray"
                        android:maxLines="1"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginEnd="10sp"
                        android:paddingTop="10sp"
                        android:paddingBottom="5sp"
                        android:text="CEP"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edt_cep_cadastro"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginEnd="10sp"
                        android:background="@drawable/edit_text_gray"
                        android:maxLines="1"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginEnd="10sp"
                        android:paddingTop="10sp"
                        android:paddingBottom="5sp"
                        android:text="Cidade"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edt_cidade_cadastro"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:background="@drawable/edit_text_gray"
                        android:maxLines="1"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginEnd="10sp"
                        android:paddingTop="10sp"
                        android:paddingBottom="5sp"
                        android:text="Estado"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edt_estado_cadastro"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginEnd="10sp"
                        android:background="@drawable/edit_text_gray"
                        android:maxLines="1"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/grayButtonBackground"
        app:flow_verticalAlign="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline3">

            <Button
                android:id="@+id/btn_voltar_cadastro_step_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_gray"
                android:text="Voltar"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_avancar_cadastro_step_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10sp"
                android:layout_weight="1"
                android:background="@drawable/button_orange"
                android:text="Avançar"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>