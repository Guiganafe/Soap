<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagem_servico"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:src="@drawable/ic_logo_menu"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical"
                android:layout_marginStart="15dp">

                <TextView
                    android:id="@+id/textView_servico_hora"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical"
                    android:text="Das 11:00 as 12:00" />

                <TextView
                    android:id="@+id/textView_servico_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical"
                    android:text="Aasiya Jayant" />

                <TextView
                    android:id="@+id/textView_servico_quantidade"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical"
                    android:text="3 serviÃ§os" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>