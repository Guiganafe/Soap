<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagem_servico_evento_selecionado"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:background="@drawable/back_yellow"
                android:padding="5dp"
                android:src="@drawable/ic_logo_menu" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_servico_titulo_evento_selecionado"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:autoSizeTextType="uniform"
                    android:text="Serviço"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_duracao_servico_evento_selecionado"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:layout_weight="1"
                        android:autoSizeTextType="uniform"
                        android:text="Duração: 45 min" />

                    <TextView
                        android:id="@+id/textView_preco_servico_evento_selecionado"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:layout_weight="1"
                        android:autoSizeTextType="uniform"
                        android:text="Preço: R$ 150" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_servico_evento_selecionado"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_remove_x"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>