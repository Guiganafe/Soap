<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagem_categoria"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:background="@drawable/back_yellow"
                android:padding="20dp"
                android:src="@drawable/ic_logo_menu" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_categoria_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:autoSizeTextType="uniform"
                    android:text="Aasiya Jayant"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_categoria_quantidade"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:autoSizeTextType="uniform"
                    android:text="3 ServiÃ§os" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="75dp"
                    android:layout_gravity="end"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/ic_seta_direita" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>